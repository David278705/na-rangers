# Variables de entorno para Railway (Producción)
# Copia estas variables a las Environment Variables en Railway

APP_NAME="na-rangers"
APP_ENV="production"
APP_DEBUG="false"
APP_URL="https://naranger.com"

# Database (configurado por Railway)
DB_CONNECTION="mysql"
DB_HOST="${MYSQLHOST}"
DB_PORT="${MYSQLPORT}"
DB_DATABASE="${MYSQLDATABASE}"
DB_USERNAME="${MYSQLUSER}"
DB_PASSWORD="${MYSQLPASSWORD}"

# Session
SESSION_DRIVER="database"
SESSION_LIFETIME="120"

# Cache
CACHE_STORE="database"

# Queue - IMPORTANTE: usar sync para envío inmediato de emails
QUEUE_CONNECTION="sync"

# Mail con Resend
